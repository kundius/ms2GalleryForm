<div class="ms2galleryform-file" data-id="[[+id]]">
    <a href="[[+url]]" class="ms2galleryform-file-link" title="[[+file]]" target="_blank">
        <div class="ms2galleryform-file-image-wrapper">
            <img src="[[+url]]" class="ms2galleryform-file-image" />
        </div>
    </a>
    <div class="ms2galleryform-file-meta">
        <a href="#" class="ms2galleryform-file-remove">[[%ms2galleryform_file_remove]]</a>
        <br/>
        <span class="ms2galleryform-file-size">[[+size]] Kb</span>
    </div>
    <div class="ms2galleryform-file-template">
        <a href="[[+url]]" title="[[+name]]">
            <img src="[[+url]]" />
        </a>
    </div>
</div>